<h1>X2Fed Customers</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each customer.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each customer}}
        <tr>
            <td>{{this.customerID}}</td>
            <td>{{this.customerName}}</td>
            <td>{{this.contactName}}</td>
            <td>{{this.contactEmail}}</td>
            <td>{{this.contactPhone}}</td>

            {{! DELETE form }}
            <form id='delete_customer_form'>
                <input type='hidden' name='delete_customer_id' value='{{this.customerID}}' />
                <input type='hidden' name='delete_customer_name' value='{{this.customerName}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Customer</h2>
<form class='cuForm' id='create_customer_form'>
    <label for='create_customer_name'>Customer Name: </label>
    <input type='text' name='create_customer_name' id='create_customer_name' required />

    <label for='create_contact_name'>Contact Name: </label>
    <input type='text' name='create_contact_name' id='create_contact_name' />

   <label for='create_contact_phone'>Contact Phone Number: </label>
    <input type='text' name='create_contact_phone' id='create_contact_phone' />

    <label for='create_contact_email'>Contact Email: </label>
    <input type='number' name='create_contact_email' id='create_contact_email' min='0' />

    <input type='submit' />
</form>

{{! UPDATE form }}
<h2>Update a Customer</h2>
<form class='cuForm' id='update_customer_form'>
    <label for='update_ customer_id'>Customer to Update: </label>
    <select name='update_ customer_id' id='update_ customer_id' required>
        <option value='' disabled selected>Select a Customer</option>
        {{#each customer}}
        <option value='{{this.id}}' required>
            {{this.customerID}}
            -
            {{this.customerName}}
        </option>
        {{/each}}
    </select>

    <label for='update_customer_contact_name'>Contact Name: </label>
    <input type='text' name='update_customer_contact_name' id='update_customer_contact_name' min='0' />

    <label for='update_customer_contact_number'>Contact Phone Number: </label>
    <input type='text' name='update_customer_contact_number' id='update_customer_contact_number' min='0' />

    <label for='update_customer_contact_email'>Contact Email: </label>
    <input type='text' name='update_customer_contact_email' id='update_customer_contact_email' min='0' />

    <input type='submit' />
</form>